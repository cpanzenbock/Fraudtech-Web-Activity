extends layout

block content

  div(class="d-flex justify-content-center")
    h1= title
  p Make requests for tooling and process improvements within Fraudtech
  form(action="/", method="POST")
    label(for="logon") Enter logon email
    br
    input(name="logon", id="logon", type="email", placeholder="user@fraudtech.com", required)
    br
    br
    label(for="sel1") What needs enhancing?
    select(id="sel1", class="form-control", required)
      option Awesome Macro Tool
      option Super Cool Web Tool
      option General Configurations
    br
    textarea(name="describe", rows="10", class="form-control" placeholder="Please describe the enhancement", required)
    br
    label(for="quantity") How many people will benefit from this enhancement?
    br
    input(type="number", id="quantity", name="quantity", min="1", max="100", required)
    br
    br
    label Please attach any supporting documents
    br
    input(name="attachment", type="file", maxlength=50 allow="text/*")
    br
    br
    div(class="d-flex justify-content-center")
      button(class="btn btn-primary", type="submit") Submit
